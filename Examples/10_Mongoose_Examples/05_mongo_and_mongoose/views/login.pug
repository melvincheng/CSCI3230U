extends layout
block content
	h1 Login
	if (errorMessage)
		div= errorMessage
	form(action="/processLogin",
		  method="post",
		  class="form-horizontal")

		label(class="control-label col-md-1",for="username") Username:
		div(class="col-md-4 form-group")
			input(type="text",
				   id="username",
				   name="username",
				   placeholder="Username",
				   class="form-control")

		div(class="clearfix hidden-sm-up")
		
		label(class="control-label col-md-1",for="password") Password:
		div(class="col-md-4 form-group")
			input(type="password",
				   id="password",
				   name="password",
				   placeholder="Password",
				   class="form-control")

		div(class="clearfix hidden-sm-up")

		div(class="col-md-offset-1 col-md-1")
			button(type="submit",class="btn btn-primary") Login
