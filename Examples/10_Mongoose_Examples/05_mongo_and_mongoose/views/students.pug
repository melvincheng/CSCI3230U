extends layout
block content
	h1 Student List
	table(class="table")
		tr
			th SID
			th First Name
			th Last Name
			th GPA
			th Action
		each student in students
			tr
				td= student.sid
				td= student.firstName
				td= student.lastName
				td= student.gpa
				td
					form(action="/deleteStudent",method="post",class="form-inline")
						div(class="col-md-4 form-group")
							input(type="hidden",
								  name="sid",
								  value=student.sid,
								  class="form-control")
							button(type="submit",
							       class="btn btn-primary") Delete							

	if (errorMessage)
		div= errorMessage

	form(action="/addOrUpdateStudent",
		  method="post",
		  class="form-horizontal")

		label(class="control-label col-md-2",for="sid") SID:
		div(class="col-md-4 form-group")
			input(type="text",
				   id="sid",
				   name="sid",
				   placeholder="Student ID",
				   class="form-control")

		div(class="clearfix hidden-sm-up")
		
		label(class="control-label col-md-2",for="firstName") First Name:
		div(class="col-md-4 form-group")
			input(type="text",
				   id="firstName",
				   name="firstName",
				   placeholder="First Name",
				   class="form-control")

		div(class="clearfix hidden-sm-up")

		label(class="control-label col-md-2",for="lastName") Last Name:
		div(class="col-md-4 form-group")
			input(type="text",
				   id="lastName",
				   name="lastName",
				   placeholder="Last Name",
				   class="form-control")

		div(class="clearfix hidden-sm-up")

		label(class="control-label col-md-2",for="firstName") GPA:
		div(class="col-md-4 form-group")
			input(type="text",
				   id="gpa",
				   name="gpa",
				   placeholder="GPA",
				   class="form-control")

		div(class="clearfix hidden-sm-up")

		div(class="col-md-offset-2 col-md-1")
			button(type="submit",class="btn btn-primary") Insert or Update

